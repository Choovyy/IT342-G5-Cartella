<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logoinvi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoinvi"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cartella"
        tools:targetApi="31">

        <!-- LandingPage as the main activity -->
        <activity
            android:name=".LandingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login activity with deep link for Google OAuth2 -->
        <activity android:name=".Login" android:exported="true">
            <intent-filter android:label="oauth2redirect">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="cartella"
                    android:host="oauth2"
                    android:path="/redirect" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity android:name=".Register" android:exported="true" />
        <activity android:name=".VendorLogin" android:exported="true" />
        <activity android:name=".VendorDashboard" android:exported="true" />
        <activity android:name=".Dashboard" android:exported="true" />

    </application>

</manifest>
